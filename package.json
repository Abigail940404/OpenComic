{
  "name": "opencomic",
  "productName": "OpenComic",
  "version": "0.1.0",
  "main": "scripts/main.js",
  "keywords": [
    "comics",
    "manga",
    "books"
  ],
  "description": "Comic and manga reader",
  "homepage": "https://github.com/ollm/OpenComic",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ollm/OpenComic.git"
  },
  "scripts": {
    "start": "electron-forge start",
    "rebuild": "electron-rebuild -f -w sharp",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-deb": "electron-forge make --platform linux --targets deb",
    "make-rpm": "electron-forge make --platform linux --targets rpm",
    "make-flatpak": "electron-forge make --platform linux --targets flatpak",
    "make-snap": "electron-forge make --platform linux --targets snap",
    "make-zip": "electron-forge make --targets zip",
    "make-squirrel": "electron-forge make --platform win32 --targets squirrel"
  },
  "dependencies": {
    "7zip-bin": "^4.1.0",
    "electron-json-storage": "^4.1.6",
    "electron-squirrel-startup": "^1.0.0",
    "electron-window-state": "^5.0.3",
    "fs": "0.0.1-security",
    "gm": "^1.23.1",
    "handlebars": "^4.1.2",
    "jquery": "^3.4.1",
    "mime": "^2.4.0",
    "node-7z": "^1.0.1",
    "node-unrar": "^0.1.5",
    "sha1": "^1.1.1",
    "sharp": "^0.22.1",
    "unzip2": "^0.2.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.33",
    "@electron-forge/maker-deb": "^6.0.0-beta.33",
    "@electron-forge/maker-rpm": "^6.0.0-beta.33",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.33",
    "@electron-forge/maker-zip": "^6.0.0-beta.33",
    "electron": "^5.0.6",
    "electron-rebuild": "^1.8.5"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "executableName": "opencomic",
        "buildVersion": 1,
        "appCategoryType": "public.app-category.graphics-design",
        "packageManager": "npm",
        "ignore": [
          "out"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "OpenComic",
            "description": "Comic and manga reader"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "opencomic",
            "productName": "OpenComic",
            "genericName": "Comic Reader",
            "description": "Comic and manga reader",
            "maintainer": "ollm",
            "homepage": "https://github.com/ollm/OpenComic",
            "section": "graphics",
            "categories": [
              "Graphics"
            ],
            "depends": [
              "libvips",
              "unrar"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-snap",
          "config": {
            "name": "opencomic",
            "description": "Comic and manga reader",
            "executableName": "opencomic"
          }
        },
        {
          "name": "@electron-forge/maker-flatpak",
          "config": {
            "productName": "OpenComic",
            "genericName": "Comic Reader",
            "description": "Comic and manga reader",
            "categories": [
              "Graphics"
            ]
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "opencomic",
            "productName": "OpenComic",
            "genericName": "Comic Reader",
            "description": "Comic and manga reader",
            "homepage": "https://github.com/ollm/OpenComic",
            "categories": [
              "Graphics"
            ]
          }
        },
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "ollm",
              "name": "OpenComic"
            },
            "prerelease": true
          }
        }
      ]
    }
  }
}
